      <div class="d-flex">
        <%= render "pages/shared/happeningcard" %>
        <%= render "pages/shared/happeningcard" %>
        <%= render "pages/shared/happeningcard" %>
        <%= render "pages/shared/happeningcard" %>
      </div>
    </div>
  </div>

  <div class="mb-3 p-3 bg-white">
    <div class="d-flex justify-content-between mb-2">
      <h1 class="fs-2 fw-bold mb-0">Challenges</h1>
