<div class="chat-footer container-fluid pt-3">
  <%= simple_form_for [@chatroom, @message],
    html: {class: "d-flex"} do |f|
  %>
    <%= f.input :content,
      label: false,
      placeholder: "Type message here",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn-pri-small-turquoise mb-3" %>
  <% end %>
</div>
