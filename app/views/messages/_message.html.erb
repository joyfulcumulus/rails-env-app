<div class="message <%= message.user == current_user ? "message-sender" : "message-receiver" %>">
  <div>
    <% if message.user.avatar.attached? %>
      <%= cl_image_tag message.user.avatar.key, class: "avatar", alt: "user avatar" %>
    <% else %>
      <%= image_tag "avatar.png", class: "avatar", alt: "default avatar" %>
    <% end %>
  </div>
  <div class="content" id="message-<%= message.id %>">
    <p class="mb-0 p-2"><%= message.content %></p>
    <div class="text-end pe-2 mb-2">
      <small>
        <% if message.user != current_user %>
          <strong><%= message.user.first_name %></strong>
        <% end %>
        <i><%= message.created_at.strftime("%b %e %l:%M %p") %></i>
      </small>
    </div>
  </div>
</div>
